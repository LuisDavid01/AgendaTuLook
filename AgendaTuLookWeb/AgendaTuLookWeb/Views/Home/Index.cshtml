@inject IHttpContextAccessor HttpContextAccessor

@{
    var nombreUsuario = HttpContextAccessor.HttpContext.Session.GetString("Nombre");
    var usuarioId = HttpContextAccessor.HttpContext.Session.GetString("UsuarioId");
    var rolId = HttpContextAccessor.HttpContext.Session.GetString("RolId");
}@{
    var esAdmin = long.Parse(rolId!) == 1;
    var accion = esAdmin ? "GestionarCitas" : "SolicitarServiciosCita";
    var controlador = "Citas";
    var titulo = esAdmin ? "Gestionar Citas" : "Agendar Cita";
}

@model List<ReviewDestacadoModel>

<div id="carouselExampleControls" class="carousel slide mb-3" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active position-relative">
            <a asp-action="@accion" asp-controller="@controlador" class="d-block w-100 position-relative">
                <img src="https://images.squarespace-cdn.com/content/v1/5fd787d32a8a4a2604b22b5d/a1a982a2-8886-4017-a735-3fde5aeab145/msbs-barbershop-perspective-22000.jpg"
                     class="d-block w-100" height="300px" style="object-fit: cover">
                <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex justify-content-center align-items-center">
                    <h2 class="text-white">@titulo</h2>
                </div>
            </a>
        </div>
        <div class="carousel-item position-relative">
            <a asp-action="@accion" asp-controller="@controlador" class="d-block w-100 position-relative">
                <img src="https://images.squarespace-cdn.com/content/v1/59a04de337c581c5e1bcd854/1710998377547-DWXDZA5WIX8Q9VKFF0WC/AAA01567.jpg?format=1500w"
                     class="d-block w-100" height="300px" style="object-fit: cover">
                <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex justify-content-center align-items-center">
                    <h2 class="text-white">@titulo</h2>
                </div>
            </a>
        </div>
        <div class="carousel-item position-relative">
            <a asp-action="@accion" asp-controller="@controlador" class="d-block w-100 position-relative">
                <img src="https://cdn.prod.website-files.com/644a9d9ce529ef8812f82a28/647fb85c69e95444243ef9bd_Henley%27s%20Gentlemen%27s%20Grooming%20-%20Barbershop%20and%20Mens%20Grooming.webp"
                     class="d-block w-100" height="300px" style="object-fit: cover">
                <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex justify-content-center align-items-center">
                    <h2 class="text-white">@titulo</h2>
                </div>
            </a>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>



<!-- Reseñas de Clientes -->
<section class="reviews-section py-5 bg-white">
    <div class="container">
        <h2 class="text-center mb-5 position-relative">
            <span class="border-bottom border-brown border-3 pb-2">Nuestros Clientes</span>
        </h2>
        
        @if (Model != null && Model.Any())
        {
            <div id="reviewsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-inner">
                    @{
                        // Mostrar 3 tarjetas a la vez en pantallas grandes
                        for (int i = 0; i < Model.Count; i += 3)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="row justify-content-center">
                                    @for (int j = i; j < Math.Min(i + 3, Model.Count); j++)
                                    {
                                        var review = Model[j];
                                        <div class="col-md-4 mb-4 mb-md-0">
                                            <div class="card review-card h-100 border-0 shadow-sm">
                                                <div class="card-body p-4">
                                                    <div class="text-warning mb-3">
                                                        @for (int star = 0; star < review.CalificacionReview; star++)
                                                        {
                                                            <i class="fas fa-star"></i>
                                                        }
                                                        @for (int star = review.CalificacionReview; star < 5; star++)
                                                        {
                                                            <i class="far fa-star"></i>
                                                        }
                                                    </div>
                                                    <p class="card-text mb-4">"@review.ComentarioReview"</p>
                                                    <div class="d-flex align-items-center mt-auto">
                                                        <div class="review-avatar bg-brown text-white rounded-circle">
                                                            @review.Nombre.Substring(0, 1)
                                                        </div>
                                                        <div class="ms-3">
                                                            <h5 class="mb-0 fw-bold">@review.Nombre</h5>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
                
                <!-- Indicadores -->
                <div class="carousel-indicators position-relative mt-4">
                    @for (int i = 0; i < Math.Ceiling((double)Model.Count / 3); i++)
                    {
                        <button type="button" data-bs-target="#reviewsCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" 
                                aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i+1)"></button>
                    }
                </div>
                
                <!-- Botones de navegación -->
                <div class="d-flex justify-content-center mt-3">
                    <button class="btn btn-brown rounded-circle mx-2 nav-btn" type="button" data-bs-target="#reviewsCarousel" data-bs-slide="prev">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="btn btn-brown rounded-circle mx-2 nav-btn" type="button" data-bs-target="#reviewsCarousel" data-bs-slide="next">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center py-4 shadow-sm" style="background-color: #f8f1e9; color: #7d5a44; border-color: #d9bea3;">
                <i class="fas fa-info-circle me-2"></i> No hay reseñas disponibles en este momento.
            </div>
        }
    </div>
</section>

