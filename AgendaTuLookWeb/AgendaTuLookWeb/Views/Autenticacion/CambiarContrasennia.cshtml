@model UsuarioModel;

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-dark navbar-expand p-2" style="background-color: #291410;">
        <div class="container-fluid">
            <a class="navbar-brand fs-4 fw-bold" href="@Url.Action("Login", "Usuario")">
                <i class="fa fa-heart mx-2"></i> Donde tu belleza encuentra su mejor versión.
            </a>
        </div>
    </nav>
    <section class="container-fluid d-flex flex-grow-1 px-0">
        <div class="col">
            <img src="https://www.peluker.com/blog/wp-content/uploads/2024/07/image84mobiliario-de-barberia-rustico-anade-calidez-a-tu-barbershop.jpg" class="img-fluid" style="object-fit: cover; height: 100%;" />
        </div>
        <div class="col d-flex align-items-center">
            <div class="container-fluid d-flex flex-column">
                <form class="pb-5 border-bottom px-5" asp-action="CambiarContrasennia" method="post">
                    <div class="text-center fw-bold" style="font-size: 10vh; color: #321914;">AgendaTuLook</div>
                    <h2 class="mb-3 text-center" style="color: #321914;">Actualizar Contraseña</h2>
                    <p class="mb-4 text-center">Por favor actualice su contraseña.</p>

                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-warning text-center">
                            @TempData["Mensaje"]
                        </div>
                    }

                    <div class="form-group form-floating mb-4">
                        <input asp-for="NuevaContrasennia" type="password" class="form-control" placeholder="Nueva Contraseña" name="NuevaContrasennia" id="NuevaContrasennia" required />
                        <label for="NuevaContrasennia">Nueva Contraseña</label>
                    </div>
                    <div class="form-group form-floating mb-4">
                        <input asp-for="ConfirmarContrasennia" type="password" class="form-control" placeholder="Confirmar Contraseña" name="ConfirmarContrasennia" id="ConfirmarContrasennia" required />
                        <label for="ConfirmarContrasennia">Confirmar Contraseña</label>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg" style="background-color:#321914; border-color: #321914;">
                            Actualizar
                        </button>
                    </div>
                </form>
                <a href="@Url.Action("Registro", "Autenticacion")" class="mt-4 text-center">¿No tenés Cuenta? <br> ¡Crea una ya!</a>
                <a href="@Url.Action("Login", "Autenticacion")" class="mt-4 text-center">Si ya tenés una cuenta, <br> Iniciá Sesión</a>
            </div>
        </div>
    </section>
</div>