<div class="container mt-4">
    <!-- Header del Salón -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4">Agenda tu Look y consigue cupones</h1>
            <p class="lead">Recuerda con 5 citas optienes un cupon</p>
        </div>
    </div>

    <!-- Información del Cliente y Contador de Visitas -->
    <div class="">
        <div class="">
        </div>
        <div class="">
            <div class="card h-100">
                <div class="card-header bg-white ">
                    <h5 class="mb-0">Historial de Visitas</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">Visitas Realizadas:</h6>
                        <span id="visitCount" class="badge bg-primary fs-6">4</span>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 80%;" aria-valuenow="4" aria-valuemin="0" aria-valuemax="5">4/5</div>
                    </div>
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <span id="couponMessage">¡Solo una visita más para obtener un cupón de descuento del 30%!</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card h-100">
        <div class="card-header bg-white">
            <h5 class="mb-0">Próxima Cita</h5>
        </div>
        <div class="card-body">
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-calendar me-2 text-primary"></i>
                <span>15/03/2025</span>
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-clock me-2 text-primary"></i>
                <span>14:30</span>
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-scissors me-2 text-primary"></i>
                <span>Corte + Barba</span>
            </div>
        </div>
    </div>

    <!-- Scripts para la lógica de cupones -->
    <script>
        // Incrementar el contador de visitas
        currentVisits++;
        visitCountElement.textContent = currentVisits;

        // Actualizar la barra de progreso
        const progressBar = document.querySelector('.progress-bar');
        const progressPercent = (currentVisits / 5) * 100;
        progressBar.style.width = Math.min(progressPercent, 100) + '%';
        progressBar.textContent = currentVisits + '/5';
        progressBar.setAttribute('aria-valuenow', currentVisits);

        // Verificar si se ha alcanzado el umbral para el cupón (5 visitas)
        if (currentVisits >= 5) {
            // Mostrar el cupón
            document.getElementById('availableCoupon').classList.remove('d-none');
            document.getElementById('noCoupons').classList.add('d-none');

            // Actualizar mensaje
            document.getElementById('couponMessage').textContent = '¡Has obtenido un cupón de descuento del 30%!';

            // Reiniciar contador a 0 para iniciar nuevo ciclo
            setTimeout(() => {
                visitCountElement.textContent = '0';
                progressBar.style.width = '0%';
                progressBar.textContent = '0/5';
                progressBar.setAttribute('aria-valuenow', 0);
                document.getElementById('couponMessage').textContent = '¡Acumula 5 visitas para obtener un cupón de descuento del 30%!';
            }, 3000);
        }

        // Simulación de registro exitoso
        alert('¡Cita registrada con éxito!');
            });
    </script>