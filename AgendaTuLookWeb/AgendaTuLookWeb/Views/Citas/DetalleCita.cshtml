@model CitaDetalleModel
@inject IHttpContextAccessor HttpContextAccessor

@{
    var usuarioId = HttpContextAccessor.HttpContext!.Session.GetString("UsuarioId");
}

<div class="pb-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Detalle cita</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="bg-white rounded rounded-1 p-3 mb-3">
                <form method="post">
                    <!-- Info del Cliente -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="mb-0">
                                <i class="fas fa-user-circle mr-2" style="color:#321914"></i> Información Personal
                            </h4>
                            <div class="text-end">
                                <small class="text-muted me-2">¿La información personal no está correcta?</small>
                                <a asp-controller="Usuarios" asp-action="PerfilUsuario" asp-route-id="@Model.UsuarioId"
                                   class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-user-edit me-1"></i> Actualizar
                                </a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nombre:</label>
                                <input class="form-control bg-light py-2" value="@Model.NombreUsuario" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Correo electrónico:</label>
                                <input class="form-control bg-light py-2" value="@Model.Correo" readonly />
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Telefono))
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Teléfono:</label>
                                    <div class="form-control bg-light py-2" readonly>@Model.Telefono</div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Detalles cita -->
                    <div class="mb-4">
                        <h4 class="mb-3">
                            <i class="fas fa-calendar-alt mr-2" style="color:#321914"></i> Detalles de la Cita
                        </h4>
                        <div class="row">
                            <input type="hidden" name="ServicioId" value="@Model.ServicioId" />
                            <input type="hidden" name="UsuarioId" value="@Model.UsuarioId" />
                            <input type="hidden" name="DiaTrabajoId" value="@Model.DiaTrabajoId" />
                            <input type="hidden" name="Fecha" value="@Model.Fecha.ToString("yyyy-MM-dd")" />

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Servicio:</label>
                                <input class="form-control bg-light py-2" value="@Model.NombreServicio" readonly />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Precio (IVAI):</label>
                                <input class="form-control bg-light py-2" value="@Model.Precio.ToString("C0")" readonly />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Duración (minutos):</label>
                                <div class="form-control bg-light py-2" readonly>@Model.Duracion</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Fecha:</label>
                                <div class="form-control bg-light py-2">@Model.Fecha.ToString("dd/MM/yyyy")</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Hora de Inicio:</label>
                                <input class="form-control bg-light py-2" value="@Model.HoraInicio" readonly />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Hora de Finalización:</label>
                                <input class="form-control bg-light py-2" value="@Model.HoraFin" readonly />
                            </div>
                        </div>
                    </div>
                </form>
                <div class="text-end mt-3">
                    <a asp-action="Calendario" asp-controller="Calendario" class="btn btn-outline-primary">
                     <i class="fas fa-arrow-left me-1"></i> Regresar al Calendario
                 </a>
                </div>

            </div>
        </div>
    </div>
</div>
